<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="content">
            <block class="Ebanx\Payments\Block\Success\Base" name="onepage.success.ebanx_payments"
                   template="checkout/success.phtml">
                <block class="Ebanx\Payments\Block\Success\Cash" name="ebanx.success.payment.cash"
                       as="ebanx_cash" template="checkout/success/cash.phtml">
                    <block class="Ebanx\Payments\Block\Success\Cash" name="ebanx.success.payment.spei"
                           as="ebanx_spei" template="checkout/success/spei.phtml"/>
                    <block class="Ebanx\Payments\Block\Success\Cash" name="ebanx.success.payment.boleto"
                           as="ebanx_boleto" template="checkout/success/boleto.phtml"/>
                    <block class="Ebanx\Payments\Block\Success\Cash" name="ebanx.success.payment.oxxo"
                           as="ebanx_oxxo" template="checkout/success/oxxo.phtml"/>
                    <block class="Ebanx\Payments\Block\Success\Cash" name="ebanx.success.payment.pagoefectivo"
                           as="ebanx_pagoefectivo" template="checkout/success/pagoefectivo.phtml"/>
                    <block class="Ebanx\Payments\Block\Success\Cash" name="ebanx.success.payment.baloto"
                           as="ebanx_baloto" template="checkout/success/baloto.phtml"/>
                </block>

                <block class="Ebanx\Payments\Block\Success\Redirect" name="ebanx.success.payment.redirect"
                       as="ebanx_redirect" template="checkout/success/redirect.phtml">
                    <block class="Ebanx\Payments\Block\Success\Redirect" name="ebanx.success.payment.tef"
                           as="ebanx_tef" template="checkout/success/tef.phtml"/>
                    <block class="Ebanx\Payments\Block\Success\Redirect" name="ebanx.success.payment.wallet"
                           as="ebanx_wallet" template="checkout/success/wallet.phtml"/>
                    <block class="Ebanx\Payments\Block\Success\Redirect" name="ebanx.success.payment.sencillito"
                           as="ebanx_sencillito" template="checkout/success/sencillito.phtml"/>
                    <block class="Ebanx\Payments\Block\Success\Redirect" name="ebanx.success.payment.servipag"
                           as="ebanx_servipag" template="checkout/success/servipag.phtml"/>
                    <block class="Ebanx\Payments\Block\Success\Redirect" name="ebanx.success.payment.multicaja"
                           as="ebanx_multicaja" template="checkout/success/multicaja.phtml"/>
                    <block class="Ebanx\Payments\Block\Success\Redirect" name="ebanx.success.payment.webpay"
                           as="ebanx_webpay" template="checkout/success/webpay.phtml"/>
                    <block class="Ebanx\Payments\Block\Success\Redirect" name="ebanx.success.payment.safetypay"
                           as="ebanx_safetypay" template="checkout/success/safetypay.phtml"/>
                </block>

                <block class="Ebanx\Payments\Block\Success\Creditcard" name="ebanx.success.payment.creditcard"
                       as="ebanx_creditcard" template="checkout/success/creditcard.phtml"/>

            </block>
        </referenceContainer>
    </body>
</page>
