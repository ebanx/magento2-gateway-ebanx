<?xml version="1.0"?>

<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <!-- Payment Method Facade configuration -->
    <virtualType name="EbanxPaymentsGenericFacade" type="Magento\Payment\Model\Method\Adapter">
        <arguments>
            <argument name="code" xsi:type="const">Ebanx\Payments\Model\Ui\EbanxGenericConfigProvider::CODE</argument>
            <argument name="formBlockType" xsi:type="string">Magento\Payment\Block\Form</argument>
            <argument name="infoBlockType" xsi:type="string">Magento\Payment\Block\Info</argument>
            <argument name="valueHandlerPool" xsi:type="object">EbanxPaymentsGenericValueHandlerPool</argument>
        </arguments>
    </virtualType>

    <virtualType name="EbanxPaymentsBoletoFacade" type="Magento\Payment\Model\Method\Adapter">
        <arguments>
            <argument name="code" xsi:type="const">Ebanx\Payments\Model\Ui\EbanxBoletoConfigProvider::CODE</argument>
            <argument name="formBlockType" xsi:type="string">Ebanx\Payments\Block\Form\Boleto</argument>
            <argument name="infoBlockType" xsi:type="string">Ebanx\Payments\Block\Info\Boleto</argument>
            <argument name="valueHandlerPool" xsi:type="object">EbanxPaymentsBoletoValueHandlerPool</argument>
            <argument name="validatorPool" xsi:type="object">EbanxPaymentsBoletoValidatorPool</argument>
            <argument name="commandPool" xsi:type="object">EbanxPaymentsBoletoCommandPool</argument>
        </arguments>
    </virtualType>


    <!-- Value handlers infrastructure -->
    <virtualType name="EbanxPaymentsGenericValueHandlerPool" type="Magento\Payment\Gateway\Config\ValueHandlerPool">
        <arguments>
            <argument name="handlers" xsi:type="array">
                <item name="default" xsi:type="string">EbanxPaymentsGenericConfigValueHandler</item>
            </argument>
        </arguments>
    </virtualType>
    <virtualType name="EbanxPaymentsGenericConfigValueHandler" type="Magento\Payment\Gateway\Config\ConfigValueHandler">
        <arguments>
            <argument name="configInterface" xsi:type="object">EbanxPaymentsGenericConfig</argument>
        </arguments>
    </virtualType>

    <virtualType name="EbanxPaymentsBoletoValueHandlerPool" type="Magento\Payment\Gateway\Config\ValueHandlerPool">
        <arguments>
            <argument name="handlers" xsi:type="array">
                <item name="default" xsi:type="string">EbanxPaymentsBoletoConfigValueHandler</item>
            </argument>
        </arguments>
    </virtualType>
    <virtualType name="EbanxPaymentsBoletoConfigValueHandler" type="Magento\Payment\Gateway\Config\ConfigValueHandler">
        <arguments>
            <argument name="configInterface" xsi:type="object">EbanxPaymentsBoletoConfig</argument>
        </arguments>
    </virtualType>


    <!-- Configuration reader -->
    <virtualType name="EbanxPaymentsGenericConfig" type="Magento\Payment\Gateway\Config\Config">
        <arguments>
            <argument name="methodCode" xsi:type="const">Ebanx\Payments\Model\Ui\EbanxGenericConfigProvider::CODE</argument>
        </arguments>
    </virtualType>

    <virtualType name="EbanxPaymentsBoletoConfig" type="Magento\Payment\Gateway\Config\Config">
        <arguments>
            <argument name="methodCode" xsi:type="const">Ebanx\Payments\Model\Ui\EbanxBoletoConfigProvider::CODE</argument>
        </arguments>
    </virtualType>


    <!--General Response validator-->
    <virtualType name="GeneralResponseValidator" type="Ebanx\Payments\Gateway\Validator\GeneralResponseValidator">
        <arguments>
            <argument name="loggerInterface" xsi:type="object">Ebanx\Payments\Logger\EbanxLogger</argument>
        </arguments>
    </virtualType>


    <!-- Commands infrastructure -->
    <virtualType name="EbanxPaymentsBoletoCommandPool" type="Magento\Payment\Gateway\Command\CommandPool">
        <arguments>
            <argument name="commands" xsi:type="array">
                <item name="authorize" xsi:type="string">EbanxPaymentsBoletoAuthorizeCommand</item>
                <item name="capture" xsi:type="string">EbanxPaymentsCaptureCommand</item>
                <item name="void" xsi:type="string">EbanxPaymentsCancelCommand</item>
                <item name="refund" xsi:type="string">EbanxPaymentsRefundCommand</item>
                <item name="cancel" xsi:type="string">EbanxPaymentsCancelCommand</item>
            </argument>
        </arguments>
    </virtualType>



    <!-- Authorization command  -->
    <virtualType name="EbanxPaymentsBoletoAuthorizeCommand" type="Magento\Payment\Gateway\Command\GatewayCommand">
        <arguments>
            <argument name="requestBuilder" xsi:type="object">EbanxPaymentsBoletoAuthorizeRequest</argument>
            <argument name="transferFactory" xsi:type="object">Ebanx\Payments\Gateway\Http\TransferFactory</argument>
            <argument name="client" xsi:type="object">Ebanx\Payments\Gateway\Http\Client\TransactionAuthorization</argument>
            <!--<argument name="validator" xsi:type="object">GeneralResponseValidator</argument>-->
            <argument name="handler" xsi:type="object">EbanxPaymentsBoletoResponseHandlerComposite</argument>
        </arguments>
    </virtualType>
    <!-- Capture command  -->
    <virtualType name="EbanxPaymentsCaptureCommand" type="Magento\Payment\Gateway\Command\GatewayCommand">
        <arguments>
            <argument name="requestBuilder" xsi:type="object">EbanxPaymentsCaptureRequest</argument>
            <argument name="transferFactory" xsi:type="object">Ebanx\Payment\Gateway\Http\TransferFactory</argument>
            <argument name="client" xsi:type="object">Ebanx\Payment\Gateway\Http\Client\TransactionCapture</argument>
            <!--<argument name="validator" xsi:type="object">Ebanx\Payment\Gateway\Validator\CaptureResponseValidator</argument>-->
            <argument name="handler" xsi:type="object">EbanxPaymentsCaptureResponseHandlerComposite</argument>
        </arguments>
    </virtualType>
    <!--Refund command-->
    <virtualType name="EbanxPaymentsRefundCommand" type="Magento\Payment\Gateway\Command\GatewayCommand">
        <arguments>
            <argument name="requestBuilder" xsi:type="object">EbanxPaymentsRefundRequest</argument>
            <argument name="transferFactory" xsi:type="object">Ebanx\Payments\Gateway\Http\TransferFactory</argument>
            <argument name="client" xsi:type="object">Ebanx\Payments\Gateway\Http\Client\TransactionRefund</argument>
            <!--<argument name="validator" xsi:type="object">Ebanx\Payments\Gateway\Validator\RefundResponseValidator</argument>-->
            <argument name="handler" xsi:type="object">EbanxPaymentsRefundResponseHandlerComposite</argument>
        </arguments>
    </virtualType>
    <!-- Cancel command -->
    <virtualType name="EbanxPaymentsCancelCommand" type="Magento\Payment\Gateway\Command\GatewayCommand">
        <arguments>
            <argument name="requestBuilder" xsi:type="object">EbanxPaymentsCancelRequest</argument>
            <argument name="transferFactory" xsi:type="object">Ebanx\Payments\Gateway\Http\TransferFactory</argument>
            <argument name="client" xsi:type="object">Ebanx\Payments\Gateway\Http\Client\TransactionCancel</argument>
            <argument name="validator" xsi:type="object">Ebanx\Payments\Gateway\Validator\CancelResponseValidator</argument>
            <argument name="handler" xsi:type="object">EbanxPaymentsCancelResponseHandlerComposite</argument>
        </arguments>
    </virtualType>



    <!-- Authorization Request -->
    <virtualType name="EbanxPaymentsBoletoAuthorizeRequest" type="Magento\Payment\Gateway\Request\BuilderComposite">
        <arguments>
            <argument name="builders" xsi:type="array">
                <item name="customer" xsi:type="string">Ebanx\Payments\Gateway\Request\CustomerDataBuilder</item>
                <item name="address" xsi:type="string">Ebanx\Payments\Gateway\Request\AddressDataBuilder</item>
                <item name="payment" xsi:type="string">Ebanx\Payments\Gateway\Request\PaymentDataBuilder</item>
                <item name="items" xsi:type="string">Ebanx\Payments\Gateway\Request\ItemsDataBuilder</item>
                <item name="transaction" xsi:type="string">Ebanx\Payments\Gateway\Request\BoletoAuthorizationDataBuilder</item>
            </argument>
        </arguments>
    </virtualType>
    <!-- Capture Request -->
    <virtualType name="EbanxPaymentsCaptureRequest" type="Magento\Payment\Gateway\Request\BuilderComposite">
        <arguments>
            <argument name="builders" xsi:type="array">
                <item name="ebanxaccount" xsi:type="string">Ebanx\Payments\Gateway\Request\EbanxAccountDataBuilder</item>
                <item name="capture" xsi:type="string">Ebanx\Payments\Gateway\Request\CaptureDataBuilder</item>
            </argument>
        </arguments>
    </virtualType>
    <!-- Refund Request -->
    <virtualType name="EbanxPaymentsRefundRequest" type="Magento\Payment\Gateway\Request\BuilderComposite">
        <arguments>
            <argument name="builders" xsi:type="array">
                <item name="ebanxaccount" xsi:type="string">Ebanx\Payments\Gateway\Request\EbanxAccountDataBuilder</item>
                <item name="refund" xsi:type="string">Ebanx\Payments\Gateway\Request\RefundDataBuilder</item>
            </argument>
        </arguments>
    </virtualType>
    <!-- Cancel Request -->
    <virtualType name="EbanxPaymentsCancelRequest" type="Magento\Payment\Gateway\Request\BuilderComposite">
        <arguments>
            <argument name="builders" xsi:type="array">
                <item name="ebanxaccount" xsi:type="string">Ebanx\Payments\Gateway\Request\EbanxAccountDataBuilder</item>
                <item name="cancel" xsi:type="string">Ebanx\Payments\Gateway\Request\CancelDataBuilder</item>
            </argument>
        </arguments>
    </virtualType>


    <!-- Response handlers -->
    <virtualType name="EbanxPaymentsBoletoResponseHandlerComposite" type="Magento\Payment\Gateway\Response\HandlerChain">
        <arguments>
            <argument name="handlers" xsi:type="array">
                <item name="payment_details" xsi:type="string">Ebanx\Payments\Gateway\Response\PaymentAuthorisationDetailsHandler</item>
                <item name="payment_comments" xsi:type="string">Ebanx\Payments\Gateway\Response\PaymentCommentHistoryHandler</item>
            </argument>
        </arguments>
    </virtualType>
    <virtualType name="EbanxPaymentsCaptureResponseHandlerComposite" type="Magento\Payment\Gateway\Response\HandlerChain">
        <arguments>
            <argument name="handlers" xsi:type="array">
                <item name="capture" xsi:type="string">Ebanx\Payments\Gateway\Response\PaymentCaptureDetailsHandler</item>
                <item name="payment_comments" xsi:type="string">Ebanx\Payments\Gateway\Response\PaymentCommentHistoryHandler</item>
            </argument>
        </arguments>
    </virtualType>
    <virtualType name="EbanxPaymentsCancelResponseHandlerComposite" type="Magento\Payment\Gateway\Response\HandlerChain">
        <arguments>
            <argument name="handlers" xsi:type="array">
                <item name="cancel" xsi:type="string">Ebanx\Payments\Gateway\Response\PaymentCancelDetailsHandler</item>
                <item name="payment_comments" xsi:type="string">Ebanx\Payments\Gateway\Response\PaymentCommentHistoryHandler</item>
            </argument>
        </arguments>
    </virtualType>


    <!-- Value validators infrastructure -->
    <virtualType name="EbanxPaymentsBoletoValidatorPool" type="Magento\Payment\Gateway\Validator\ValidatorPool">
        <arguments>
            <argument name="validators" xsi:type="array">
                <item name="country" xsi:type="string">EbanxBoletoCountryValidator</item>
            </argument>
        </arguments>
    </virtualType>
    <virtualType name="EbanxBoletoCountryValidator" type="Magento\Payment\Gateway\Validator\CountryValidator">
        <arguments>
            <argument name="config" xsi:type="object">EbanxPaymentsBoletoConfig</argument>
        </arguments>
    </virtualType>
</config>
